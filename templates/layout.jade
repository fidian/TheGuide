!!! 5
include mixins/navtree
html(lang="en")
	head
		block head
			meta(charset="utf-8")
			title
				block title
					= locals.name
			link(rel="stylesheet", href="/css/site.css")
			script(src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=MML_HTMLorMML")
	body
		header
			div.inner
				block header
					h1
						a(href="/")= locals.name
					p= locals.description
		#wrapper
			nav
				div.inner
					block nav
						mixin navtree(contents)
			div#content
				block content
					p Content should have gone here
		footer
			div.inner
				block footer
					p &copy; #{ new Date().getFullYear() } #{ locals.owner } -&nbsp;
						a(href="https://github.com/fidian/TheGuide/edit/master/contents/"+page.filepath.relative) Edit this page on GitHub
